<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SubTitlePlayerMain$PlaceholderFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:id="@+id/ctrl_start_service_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:id="@+id/ctrl_stop_service_btn"
        android:layout_alignTop="@+id/ctrl_start_service_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind"
        android:id="@+id/ctrl_bind_btn"
        android:layout_toStartOf="@+id/ctrl_start_service_btn"
        android:layout_toLeftOf="@+id/ctrl_start_service_btn"
        android:layout_alignLeft="@id/ctrl_start_service_btn"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/ctrl_start_service_btn"
        android:layout_alignRight="@+id/ctrl_start_service_btn"
        android:layout_alignEnd="@+id/ctrl_start_service_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnBind"
        android:id="@+id/ctrl_unbind_btn"
        android:layout_toStartOf="@+id/ctrl_stop_service_btn"
        android:layout_toLeftOf="@+id/ctrl_stop_service_btn"
        android:layout_alignLeft="@id/ctrl_stop_service_btn"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/ctrl_stop_service_btn"
        android:layout_alignRight="@+id/ctrl_stop_service_btn"
        android:layout_alignEnd="@+id/ctrl_stop_service_btn" />
</RelativeLayout>
